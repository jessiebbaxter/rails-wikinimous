<div class="wrapper">
	<div class="container">
		<div class="row">
      		<div class="col-sm-8 col-sm-offset-2">
      			<h1><%= @article.title %></h1>
      			<%= link_to articles_edit_path do %>
                    <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to articles_delete_path, method: :delete do %>
                    <i class="fas fa-trash-alt"></i>
                <% end %>
      			<hr>
      			<p><%= @article.content %></p>
      		</div>
      	</div>
	</div>
</div>